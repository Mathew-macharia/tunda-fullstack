# E2E Testing Environment Configuration
# Copy this file to .env.e2e and modify as needed

# API Configuration
E2E_API_BASE_URL=http://127.0.0.1:8000/api
E2E_FRONTEND_URL=http://localhost:3000

# Database Configuration for E2E Tests
DB_NAME=yourtestdbname
DB_USER=yourusername
DB_PASSWORD=yourpassword
DB_HOST=localhost
DB_PORT=3306

# Django Settings
DJANGO_SETTINGS_MODULE=tunda.settings
DEBUG=True

# Test Configuration
PYTEST_PARALLEL_WORKERS=4
PYTEST_TIMEOUT=30

# External Services (Mock endpoints for testing)
SMS_MOCK_MODE=True
EMAIL_MOCK_MODE=True
MPESA_MOCK_MODE=True
WEATHER_API_MOCK_MODE=True

# Logging
E2E_LOG_LEVEL=INFO
E2E_LOG_FILE=tests/logs/e2e.log

# Test Data
E2E_CLEANUP_DB=True
E2E_PRESERVE_MEDIA=False 